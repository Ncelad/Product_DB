@page
@model IndexModel
@{
    ViewData["Title"] = "Main";
}

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Products.Count; i++)
        {
            <tr>
                <th scope="row">@(i+1)</th>
                <td>@Model.Products[i].Name</td>
                <td>@Model.Products[i].Price</td>
            </tr>
        }
    </tbody>
</table>
